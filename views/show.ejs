<% include partials/header %>

<h1>Edit/Delete <%=list.title%></h1>

<form action="/lists/<%=list._id%>?_method=PUT" method="POST">
    <input type="text" name="list[title]" value="<%=list.title%>">
    <div>
        <input type="text" name="list[date]" value="<%=list.date%>">
    </div>
    <div>
        <textarea><%=list.content%></textarea>
    </div>
    
    <button>Edit</button>
</form>
<form action="/lists/<%=list._id%>?_method=DELETE" method="POST">
    <button>Delete</button>
</form>

<% include partials/footer %>